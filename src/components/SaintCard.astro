---
/**
 * SaintCard Component
 * Displays a saint with their basic information
 */

interface Props {
  name: string;
  church: string;
  location: string;
  description: string;
  image?: string;
  link: string;
  translations: {
    learnMore: string;
  };
}

const { name, church, location, description, image, link, translations } = Astro.props;
---

<article class="card saint-card">
  {image && (
    <div class="card-image">
      <img src={`${import.meta.env.BASE_URL}images/saints/${image}`} alt={name} loading="lazy" />
    </div>
  )}
  <div class="card-content">
    <h3 class="card-title">{name}</h3>
    <div class="saint-location">
      <svg class="card-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
        <circle cx="12" cy="10" r="3"/>
      </svg>
      <span>{location}</span>
    </div>
    <p class="saint-church">{church}</p>
    <p class="text-muted" style="line-height: 1.6; font-size: 0.9375rem; margin: 0; flex-grow: 1;">{description}</p>
    
    <a href={link} class="card-link">
      {translations.learnMore}
      <svg class="card-link-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  </div>
</article>

<style>
  /* Saint-specific styles only */
  .saint-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-image img {
    transition: transform var(--transition-base);
  }

  .saint-location {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    color: var(--color-accent-600);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .saint-church {
    color: var(--color-primary-700);
    font-weight: 600;
    font-size: 0.9375rem;
    margin: 0;
  }
</style>

