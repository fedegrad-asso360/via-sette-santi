---
/**
 * SaintCard Component
 * Displays a saint with their basic information
 */

interface Props {
  name: string;
  church: string;
  location: string;
  description: string;
  image?: string;
  link: string;
  translations: {
    learnMore: string;
  };
}

const { name, church, location, description, image, link, translations } = Astro.props;
---

<article class="card-base">
  {image && (
    <div class="card-image" style="height: 180px;">
      <img src={`${import.meta.env.BASE_URL}images/saints/${image}`} alt={name} loading="lazy" />
    </div>
  )}
  <div class="card-content">
    <h3 class="card-title" style="font-size: 1.25rem;">{name}</h3>
    <p style="color: var(--color-text); font-weight: 500; font-size: 0.9375rem; margin: 0;">{church}</p>
    <p style="color: var(--color-text-muted); font-size: 0.875rem; margin: 0;">üìç {location}</p>
    <p class="text-muted" style="line-height: 1.6; font-size: 0.9375rem; margin: 0; flex-grow: 1;">{description}</p>
    
    <a href={link} class="card-link" style="font-size: 0.9375rem;">
      {translations.learnMore} ‚Üí
    </a>
  </div>
</article>

