---
/**
 * Overview Section Component
 * 
 * Displays the main overview/introduction section of the website.
 * Provides a description of the trail and location information.
 * 
 * Props:
 * @param {string} title - Section title
 * @param {string} subtitle - Section subtitle
 * @param {string} description - Main description text
 * @param {string} locationLabel - Label for location info
 * @param {string} locationText - Location information text
 */

export interface Props {
	title: string;
	subtitle: string;
	description: string;
	locationLabel: string;
	locationText: string;
}

const { title, subtitle, description, locationLabel, locationText } = Astro.props;
---

<section id="overview" class="section">
	<div class="container-custom">
		<div class="section-header">
			<h2 class="section-title">{title}</h2>
			<p class="section-subtitle">{subtitle}</p>
		</div>

		<div class="content-wrapper">
			<div class="overview-text">
				<p class="overview-description">{description}</p>
				
				<div class="info-box">
					<div class="info-item" style="text-align: center;">
						<strong class="info-item-label">{locationLabel}:</strong>
						<span class="info-item-value">{locationText}</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.overview-text {
		text-align: center;
	}

	.overview-description {
		font-size: 1.125rem;
		line-height: 1.8;
		color: var(--color-text);
		margin-bottom: 2rem;
	}
</style>
